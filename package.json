{
    "name": "dxf-converter-ui-prototype",
    "version": "0.0.0",
    "private": true,
    "main": "./index.js",
    "engines": {
        "node": ">=8.9.0"
    },
    "dependencies": {
        "d3": "4.13.0",
        "file-saver": "1.3.3",
        "mobx": "3.5.1",
        "mobx-react": "4.4.2",
        "prop-types": "15.6.2",
        "react": "16.2.0",
        "react-dom": "16.2.0",
        "react-file-reader": "1.1.4",
        "react-waypoint": "8.0.1",
        "tcomb": "3.2.25"
    },
    "scripts": {
        "build": "node scripts/build.js",
        "ci": "start-server-and-test start:ci http://localhost:3000 test:ci",
        "postbuild": "rimraf ./docs && mkdir ./docs && mv -v ./build/* ./docs/ && cp ./sample-files/abc-building.dxf ./docs/static/sample-files && rmdir ./build",
        "coverage": "node scripts/test.js --env=jsdom --coverage",
        "eslint": "node_modules/.bin/eslint ./src/**/*.js --cache",
        "lint": "yarn eslint && yarn stylelint",
        "start": "node scripts/start.js",
        "start:ci": "BROWSER=false node scripts/start.js",
        "stylelint": "node_modules/.bin/stylelint 'src/**/*.css'",
        "test": "node_modules/.bin/jest --env=jsdom --watch",
        "test:ci": "./node_modules/.bin/cypress run",
        "verify": "yarn lint && yarn coverage && yarn ci"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn verify"
        }
    },
    "devDependencies": {
        "autoprefixer": "7.1.6",
        "babel-core": "6.26.0",
        "babel-eslint": "8.1.1",
        "babel-jest": "20.0.3",
        "babel-loader": "7.1.2",
        "babel-plugin-transform-decorators-legacy": "1.3.4",
        "babel-preset-react-app": "^3.1.1",
        "babel-runtime": "6.26.0",
        "case-sensitive-paths-webpack-plugin": "2.1.1",
        "chalk": "1.1.3",
        "chance": "1.0.13",
        "concurrently": "3.5.1",
        "css-loader": "0.28.7",
        "cypress": "2.0.4",
        "dotenv": "4.0.0",
        "dotenv-expand": "4.2.0",
        "enzyme": "3.3.0",
        "enzyme-adapter-react-16": "1.1.1",
        "eslint": "4.18.0",
        "eslint-config-airbnb-base": "12.1.0",
        "eslint-config-react-app": "2.1.0",
        "eslint-plugin-import": "2.8.0",
        "eslint-plugin-jest": "21.12.2",
        "eslint-plugin-jsx-a11y": "5.1.1",
        "eslint-plugin-react": "7.6.1",
        "extract-text-webpack-plugin": "3.0.2",
        "file-loader": "1.1.5",
        "fs-extra": "3.0.1",
        "html-webpack-plugin": "2.29.0",
        "husky": "0.15.0-rc.8",
        "jest": "20.0.4",
        "object-assign": "4.1.1",
        "postcss-flexbugs-fixes": "3.2.0",
        "postcss-loader": "2.0.8",
        "promise": "8.0.1",
        "raf": "3.4.0",
        "react-dev-utils": "^5.0.0",
        "rimraf": "2.6.2",
        "sinon": "4.4.1",
        "start-server-and-test": "1.0.1",
        "style-loader": "0.19.0",
        "stylelint": "8.4.0",
        "stylelint-config-standard": "18.0.0",
        "sw-precache-webpack-plugin": "0.11.4",
        "url-loader": "0.6.2",
        "webpack": "3.8.1",
        "webpack-dev-server": "2.9.4",
        "webpack-manifest-plugin": "1.3.2",
        "whatwg-fetch": "2.0.3"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,mjs}",
            "!src/{mockUtils,testUtils,index,registerServiceWorker}.{js,jsx,mjs}",
            "!src/dxf-converter/**/*.{js,jsx,mjs}",
            "!src/dxf-renderer/**/*.{js}"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "setupFiles": [
            "<rootDir>/config/polyfills.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
        "testMatch": [
            "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
        ],
        "moduleNameMapper": {
            "^react-native$": "react-native-web"
        },
        "moduleFileExtensions": [
            "web.js",
            "mjs",
            "js",
            "json",
            "web.jsx",
            "jsx",
            "node"
        ]
    },
    "babel": {
        "plugins": [
            "transform-decorators-legacy"
        ],
        "presets": [
            "react-app"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "homepage": "./"
}
